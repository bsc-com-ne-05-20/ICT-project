<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <!-- Received Message Layout -->
    <LinearLayout
        android:id="@+id/received_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@drawable/received_message_bg"
        android:padding="12dp"
        android:layout_marginRight="25dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/received_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_color_sub1"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/received_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/received_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Sent Message Layout -->
    <LinearLayout
        android:id="@+id/sent_message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        android:background="@drawable/sent_message_bg"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/sent_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="end">

            <TextView
                android:id="@+id/sent_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCFFFFFF"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/sent_message_status"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                android:src="@drawable/baseline_add_task_24"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>