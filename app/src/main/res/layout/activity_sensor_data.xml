<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Connection Status -->
        <TextView
            android:id="@+id/statusText"
            android:text="@string/status_disconnected"
            android:textColor="#388E3C"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Scan Button -->
        <Button
            android:id="@+id/scanButton"
            android:text="@string/scan_bluetooth_devices"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Device List -->
        <ListView
            android:id="@+id/deviceList"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:visibility="gone" />

        <!-- Sensor Data Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#E8F5E9"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_gallery"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/moistureText"
                        android:text="@string/moisture_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_compass"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/tempText"
                        android:text="@string/temperature_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_manage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/ecText"
                        android:text="@string/ec_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_info_details"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/phText"
                        android:text="@string/ph_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_crop"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/nitrogenText"
                        android:text="@string/nitrogen_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_agenda"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/phosphorusText"
                        android:text="@string/phosphorus_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="4dp">
                    <ImageView
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        app:tint="#4CAF50" />
                    <TextView android:id="@+id/potassiumText"
                        android:text="@string/potassium_label"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/clearButton"
                android:text="@string/clear_data"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/disconnectButton"
                android:text="@string/disconnect"
                android:backgroundTint="#FF5252"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>