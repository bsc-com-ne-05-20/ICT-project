<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Connect/Disconnect Button -->
    <Button
        android:id="@+id/buttonConnectDisconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect"
        android:backgroundTint="@color/green"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <!-- Test Mode Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Mode"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginEnd="8dp" />

        <Switch
            android:id="@+id/switchTestMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" /> <!-- Default to Test Mode -->
    </LinearLayout>

    <!-- Table Layout -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:stretchColumns="*">

        <!-- Table Header -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temperature"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salinity"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="pH"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moisture"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NPK"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:padding="8dp"
                android:gravity="center" />
        </TableRow>
    </TableLayout>

    <!-- Calculate Averages Button -->
    <Button
        android:id="@+id/buttonCalculateAverages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Averages"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Clear Data Button -->
    <Button
        android:id="@+id/buttonClearData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Averages Display -->
    <TextView
        android:id="@+id/textViewAverages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Averages will appear here"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:padding="8dp" />
</LinearLayout>
